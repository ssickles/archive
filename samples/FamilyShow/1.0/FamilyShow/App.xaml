<Application
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Microsoft.FamilyShow.App"
    StartupUri="MainWindow.xaml"
    >
  <Application.Resources>

    <!-- Merge the Resources & Styles from AppStyles and SimpleStyles resource dictionaries to share throughout the application -->
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
      	<ResourceDictionary Source="Resources\SimpleStyles.xaml"/>
        <ResourceDictionary Source="Resources\AppStyles.xaml"/>
        <ResourceDictionary Source="Resources\DiagramNodeStyles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>

  </Application.Resources>
</Application>
