<UserControl 
    x:Class="WpfDemoApp.Views.NumberView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    HorizontalContentAlignment="Center"
    >
    <StackPanel Background="#11000000" Margin="6" Orientation="Horizontal">
        <Button 
            Command="{Binding Path=DecrementCommand, Mode=OneTime}" 
            Content="-" 
            FontSize="20" 
            Margin="0,4,4,0"
            VerticalAlignment="Center" 
            Width="30" 
            />
        <TextBlock 
            Margin="6,0,0,0"
            Text="Number Value:" 
            VerticalAlignment="Center" 
            />
        <TextBlock 
            FontWeight="Bold" 
            Margin="6,0" 
            Text="{Binding Path=Value, Mode=OneWay}" 
            VerticalAlignment="Center" 
            MinWidth="16"
            />
        <Button 
            Command="{Binding Path=IncrementCommand, Mode=OneTime}" 
            Content="+" 
            FontSize="20" 
            Margin="3,4" 
            VerticalAlignment="Center" 
            Width="30" 
            />
    </StackPanel>
</UserControl>